<h4 class="text-center">Kullanıcılar/Users</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th class="bg-dark text-white">Username</th>
                <th class="bg-dark text-white">Email</th>
                <th class="bg-dark text-white">Eklenme Tarihi</th>
                <th class="bg-dark text-white">Güncelleme Tarihi</th>
            </tr>
        </thead>
        <tbody id="userTable">

        </tbody>
    </table>
<div id="userTable"></div>
<p id="p"></p>
<script>

axios({
    method:'get',
    url:'http://localhost:3000/users'
}).then((resp)=>{
    let data = resp.data
    for(var i=0; i<data.length; i++){
    $('#userTable').append(
        `   <tr>
                <td> ${data[i]['username']}</td> 
                <td> ${data[i]['email']}</td>
                <td> ${data[i]['createdAt']}</td>
                <td> ${data[i]['updatedAt']}</td>
            </tr>
            ` 
       )
}

console.log(data)
}).catch(err=>{
    console.log({error: err})
})



</script>

